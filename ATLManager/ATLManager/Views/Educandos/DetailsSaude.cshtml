@model ATLManager.Models.EducandoSaude
@using Microsoft.AspNetCore.Identity
@using ATLManager.Areas.Identity.Data

@inject SignInManager<ATLManagerUser> SignInManager
@inject UserManager<ATLManagerUser> UserManager

@using ATLManager.Services;
@inject LanguageService language


@{
    ViewData["Title"] = "Detalhes do Educando - Saúde";
}
<link rel='stylesheet' type='text/css' media='screen' href='~/css/custom-box-12.css'>

@if (SignInManager.IsSignedIn(User))
{
    <div class="d-flex justify-content-center ms-2 pb-2" style="padding-left: 2%; padding-top: 0%;">
        <h1 class="me-3 fw-bold text-center mb-0">Detalhes da consulta</h1>
        <img src="~/images/icons/search-group.png" width="50" height="50">
    </div>
    <div class="row" style="padding-left: 6em;">
        <div class="col text-right pb-2" id="divQuestion">
            <button class="btn btn-primary rounded-circle" id="btn-ajuda">
                <img src="~/images/question.png" alt="Imagem 1" class="img-fluid" width="15">
            </button>
        </div>
    </div>
    <!-- Fase 1  -->
    <!-- d-flex -->
    <div class="d-flex justify-content-center mt-3">

        <!-- Box  -->
        <div class="row justify-content-center custom-box" id="myBox">
            <div class="row box border-5">
                <div class="container">

                    <div class="d-flex align-items-start">
                        <div class="nav row col-3 flex-column nav-pills me-3" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                            <a class="nav-link text-center" asp-action="Details" asp-route-id="@Model.EducandoId">
                                <button class="nav-link mx-auto" id="v-pills-home-tab" data-bs-toggle="pill" data-bs-target="#v-pills-home"
                                        type="button" role="tab" aria-controls="v-pills-home" aria-selected="true">
                                    Educando
                                </button>
                            </a>
                            <button class="nav-link active" id="v-pills-profile-tab" data-bs-toggle="pill" data-bs-target="#v-pills-profile"
                            type="button" role="tab" aria-controls="v-pills-profile" aria-selected="false">
                                Info. Saúde
                            </button>
                            <a class="nav-link text-center" asp-action="DetailsResponsaveis" asp-route-id="@Model.EducandoId">
                                <button class="nav-link mx-auto" id="v-pills-profile-tab" data-bs-toggle="pill" data-bs-target="#v-pills-profile"
                                        type="button" role="tab" aria-controls="v-pills-profile" aria-selected="false">
                                    Autorizações
                                </button>
                            </a>
                            <a class="nav-link text-center" asp-action="DetailsEncarregado" asp-route-id="@Model.EducandoId">
                                <button class="nav-link mx-auto" id="v-pills-profile-tab" data-bs-toggle="pill" data-bs-target="#v-pills-profile"
                                        type="button" role="tab" aria-controls="v-pills-profile" aria-selected="false">
                                    Encarregado de Educação
                                </button>
                            </a>
                        </div>
                        <div class="tab-content" id="v-pills-tabContent">
                            <div class="tab-pane fade" id="v-pills-home" role="tabpanel" aria-labelledby="v-pills-home-tab">
                                <div class="row mt-3 text-center">
                                    <div class="mb-3">
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane fade show active" id="v-pills-profile" role="tabpanel" aria-labelledby="v-pills-profile-tab">
                                <form asp-action="DetailsSaude" >
                                    <div>
                                        <input type="hidden" asp-for="EducandoId" value="@Model.EducandoId"/>
                                        <input type="hidden" asp-for="EducandoSaudeId" value="@Model.EducandoSaudeId"/>
                                        <dl class="row">
                                            <div class="row mb-3">
                                                <div class="col-6">
                                                    <dt>
                                                        @Html.DisplayNameFor(model => model.Educando)
                                                    </dt>
                                                    <dd>
                                                        @Html.DisplayFor(model => model.Educando.Name)
                                                        @Html.DisplayFor(model => model.Educando.Apelido)
                                                    </dd>
                                                </div>
                                                <div class="col-6">     
                                                    <dt>
                                                        @Html.DisplayNameFor(model => model.BloodType)
                                                    </dt>
                                                    <dd>
                                                        <select asp-for="BloodType" class="form-control">
                                                            <option value="">Blood type</option>
                                                            <option value="A+">A+</option>
                                                            <option value="A-">A-</option>
                                                            <option value="B+">B+</option>
                                                            <option value="B-">B-</option>
                                                            <option value="AB+">AB+</option>
                                                            <option value="AB-">AB-</option>
                                                            <option value="O+">O+</option>
                                                            <option value="O-">O-</option>
                                                        </select>
                                                    </dd>      
                                                </div>
                                            </div>
                                            <div class="row mb-3">
                                                <div class="col-6">
                                                    <dt>
                                                        @Html.DisplayNameFor(model => model.InsuranceName)
                                                    </dt>
                                                    <dd>
                                                        <input type="text" asp-for="InsuranceName" class="form-control" value="@Model.InsuranceName" placeholder="Insira um nome de seguro" />
                                                    </dd>
                                                </div>
                                                <div class="col-6">
                                                    <dt>
                                                        @Html.DisplayNameFor(model => model.InsuranceNumber)
                                                    </dt>
                                                    <dd>
                                                        <input type="text" asp-for="InsuranceNumber" class="form-control" value="@Model.InsuranceNumber" placeholder="Insira o numero de seguro" />
                                                    </dd>
                                                </div>
                                                     
                                            </div>
                                            <div class="row mb-3">
                                                <div class="col-6">
                                                    <dt>
                                                        Alergias
                                                    </dt>
                                                    <dd>
                                                        <textarea class="form-control" style="height:6em;resize:none" asp-for="Allergies" value="@Model.Allergies" placeholder="Insira alergias"></textarea>
                                                    </dd>
                                                </div>

                                                <div class="col-6">
                                                    <dt>
                                                        Doenças
                                                    </dt>
                                                    <dd>
                                                        <textarea class="form-control" style="height:6em;resize:none" asp-for="Diseases" value="@Model.Diseases" placeholder="Insira doenças"></textarea>
                                                    </dd>
                                                </div>
                                                
                                               
                                            </div>
                                            <div class="row mb-3">
                                               
                                                <div class="col-6">
                                                    <dt>
                                                        @Html.DisplayNameFor(model => model.Medication)
                                                    </dt>
                                                    <dd>
                                                        <textarea class="form-control" style="height:6em;resize:none" asp-for="Medication" value="@Model.Medication" placeholder="Insira a medicação"></textarea>
                                                    </dd>
                                                </div>

                                                <div class="col-6">
                                                   
                                                        <dt>
                                                            @Html.DisplayNameFor(model => model.MedicalHistory)
                                                        </dt>
                                                        <dd>
                                                            <textarea class="form-control" style="height:6em;resize:none" asp-for="MedicalHistory" value="@Model.MedicalHistory" placeholder="Insira o historico médico"></textarea>
                                                        </dd>
                                                </div>                                            
                                            </div>
                                            <div class="col-3"></div>
                                            <div class="col">
                                            <div class="row">
                                                <dt>
                                                    @Html.DisplayNameFor(model => model.EmergencyContact)
                                                </dt>
                                                <dd>
                                                    @*<textarea class="form-control" style="height:6em;resize:none" asp-for="Medication" value="@Model.Medication" placeholder="Insira a medicação"></textarea>*@

                                                    <input type="text" asp-for="EmergencyContact" class="form-control" value="@Model.EmergencyContact" placeholder="Insira um contacto de emergencia" />
                                                </dd>
                                                </div>
                                            </div>
                                            <div class="col-3"></div>
                                            <div class="mb-3 mt-3 text-center">
                                                <button type="submit" class="btn btn-primary custom-button">Save</button>
                                            </div>
                                        </dl>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- // Box -->
        </div>
        <!-- // Fase 1 -->
    </div>

    <!-- Slide de Ajuda  -->
    <div id="menu-ajuda" class="bg-primary animate__animated animate__slideInLeft">
        <div class="row text-center mt-2">
            <div class="col-10 ">
                <h2 class="text-white ms-5">@language.GetKey("help")</h2>
            </div>
            <div class="col-2">
                <button type="button" class="btn-close text-reset" id="close-ajuda" aria-label="Close"></button>
            </div>
        </div>
        <div class="">
            <input class="form-control mr-sm-2 mb-3 p-2 text-center" type="search"
                   placeholder="Procure artigos que o ajude" aria-label="Search" style="border-radius: 10px;">
        </div>
        <!-- -->
        <ul class="row justify-content-center p-4 bg-white mt-4 "
            style="position: absolute;   right: 0em; left: 0em; height: 80%;">
            <li class="row">
                <button type="button" class="btn btn-help helpShadowButton border-0 mt-3 fw-bold" id="showText1">
                    <div class="d-flex align-items-center justify-content-center">
                        <span>@language.GetKey("howtofuncionalidades")</span>
                        <img src="~/images/guide/dropdown.png" style="padding-left: 2%;">
                    </div>
                </button>
                <span class="myText p-3 helpShadowButton" id="displayText1" style="display: none; position: relative;">
                    @language.GetKey("txtfuncionalidades")
                </span>
            </li>
            <li class="row">
                <button type="button" class="btn helpShadowButton border-0 mt-3 fw-bold" id="Artigos">
                    <div class="d-flex align-items-center justify-content-center">
                        <div class="col-3">
                            <img src="~/images/guide/terms.png" class="">
                        </div>
                        <div class="col">
                            <span>@language.GetKey("readarticles")</span>
                        </div>
                    </div>
                </button>
            </li>
            <li class="row">
                <button type="button" class="btn helpShadowButton border-0 mt-3 fw-bold" id="Artigos">
                    <div class="d-flex align-items-center">
                        <div class="col-3">
                            <img src="~/images/guide/comunity.png" class="">
                        </div>
                        <div class="col">
                            <span>@language.GetKey("askcomunity")</span>
                        </div>
                    </div>
                </button>
            </li>
            <li class="row">
                <button type="button" class="btn helpShadowButton border-0 mt-3 fw-bold" id="Artigos">
                    <div class="d-flex align-items-center justify-content-center">
                        <div class="col-3">
                            <img src="~/images/guide/new.png" class="">
                        </div>
                        <div class="col">
                            <span>@language.GetKey("newsupdates")</span>
                        </div>
                    </div>
                </button>
            </li>
            <li class="row">
                <button type="button" class="btn helpShadowButton border-0 mt-3 fw-bold" id="Artigos">
                    <div class="d-flex align-items-center justify-content-center">
                        <div class="col-3">
                            <img src="~/images/guide/feedback.png" class="">
                        </div>
                        <div class="col">
                            <span>
                                <a asp-area="" asp-controller="Home" asp-action="Contacts" style="text-decoration:none;color:inherit;">
                                    @language.GetKey("givefeedback")
                                </a>
                            </span>
                        </div>
                    </div>
                </button>
            </li>
        </ul>
    </div>
    <!-- // Slide de Ajuda  -->
}