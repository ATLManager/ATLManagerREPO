@model ATLManager.ViewModels.EducandoEditViewModel
@using Microsoft.AspNetCore.Identity
@using ATLManager.Areas.Identity.Data

@inject SignInManager<ATLManagerUser> SignInManager
@inject UserManager<ATLManagerUser> UserManager


@{
    ViewData["Title"] = "Edit";
}

@if (SignInManager.IsSignedIn(User))
{
	<!-- Container -->
	<div class="container-fluid">
		<div class="d-flex justify-content-center ms-2 pb-2" style="padding-left: 2%; padding-top: 2%;">
			<h1 class="me-3 fw-bold text-center mb-4">Alterar Educando</h1>
			<img src="~/images/icons/add-group.png" width="50" height="50">
		</div>

		<div class="row pt-5" style="padding-left: 6em;">
			<div class="col-3"></div>
			<div class="col-5"></div>
			<div class="col-4  pb-2">
				<button class="btn btn-primary rounded-circle" id="question-button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasRight" aria-controls="offcanvasRight">
					<img src="~/images/question.png" alt="Imagem 1" class="img-fluid" width="15">
				</button>
			</div>
		</div>

		<div class="d-flex justify-content-center">
			<!-- Box  -->
			<div class="row col-6 justify-content-center custom-box">
				<div class="row box border-5">
					<!--text-center  -->

					<div class="container">
						<form enctype="multipart/form-data" asp-action="Edit">
							<div asp-validation-summary="ModelOnly" class="text-danger"></div>
							<input type="hidden" asp-for="EducandoId" />
							<div class="row mb-3">
								<div class="col">
									<label asp-for="Name" class="control-label" placeholder="Insira um nome"></label>
									<input asp-for="Name" class="form-control" />
									<span asp-validation-for="Name" class="text-danger"></span>
								</div>
								<div class="col">
									<label asp-for="Apelido" class="control-label"></label>
									<input asp-for="Apelido" class="form-control" placeholder="Insira um apelido" />
									<span asp-validation-for="Apelido" class="text-danger"></span>
								</div>
							</div>
							<div class="row mb-3">
								<div class="col">
									<label asp-for="CC" class="control-label"></label>
									<input asp-for="CC" class="form-control" placeholder="Insira um numero de CC" />
									<span asp-validation-for="CC" class="text-danger"></span>
								</div>
								<div class="col">
									<label asp-for="Genero" class="control-label"></label>
									<select asp-for="Genero" class="form-control">
										<option value=null>Escolha um genero</option>
										<option value="Masculino">Masculino</option>
										<option value="Feminino">Feminino</option>
									</select>
									<span asp-validation-for="Genero" class="text-danger"></span>
								</div>
							</div>

							<div class="row mt-5">
								<div class="col">
									<label asp-for="AtlId" class="control-label">Atl</label>
									<select asp-for="AtlId" class="form-control" asp-items="ViewBag.AtlId">
										<option value=null>Escolha um ATL</option>
									</select>
								</div>
								<div class="col">
									<label asp-for="EncarregadoId" class="control-label">Encarregado</label>
									<select asp-for="EncarregadoId" class="form-control" asp-items="ViewBag.EncarregadoId">
										<option value=null>Escolha um Encarregado</option>
									</select>
								</div>
							</div>

							<div class="row mt-5">
								<div class="col">
									<label asp-for="DeclaracaoMedica" class="control-label"></label>
									<div class="custom-file">
										<input asp-for="DeclaracaoMedica" class="custom-file-input" id="customFile">
										<label class="custom-file-label" for="customFile">Choose file</label>
									</div>
									<span asp-validation-for="DeclaracaoMedica" class="text-danger"></span>
								</div>
								<div class="col">
									<label asp-for="BoletimVacinas" class="control-label"></label>
									<div class="custom-file">
										<input asp-for="BoletimVacinas" class="custom-file-input" id="customFile">
										<label class="custom-file-label" for="customFile">Choose file</label>
									</div>
									<span asp-validation-for="BoletimVacinas" class="text-danger"></span>
								</div>

								<div class="col">
									<label asp-for="ProfilePicture" class="control-label"></label>
									<div class="custom-file">
										<input asp-for="ProfilePicture" class="custom-file-input" id="customFile">
										<label class="custom-file-label" for="customFile">Choose file</label>
									</div>
									<span asp-validation-for="ProfilePicture" class="text-danger"></span>
								</div>
							</div>



							<div class="row mt-3 justify-content-center">
								<div class="col-md-auto">
									<div class="row">
										<div class="col-md-6 mb-3">
											<a asp-action="Index">
												<button type="button"
														class="btn btn-secondary custom-button">
													Voltar
												</button>
											</a>
										</div>

										<div class="col-md-6 mb-3">
											<button type="submit"
													class="btn btn-primary custom-button">
												Registar
											</button>
										</div>
									</div>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
			<!-- // Box -->
		</div>
	</div>
	<!-- // Container -->
	<!-- Slide Left (Help) -->
	<div class="offcanvas offcanvas-end position-fixed box myButton bg-primary h-auto" style="top:auto" data-bs-scroll="true" data-bs-backdrop="false" tabindex="-1" id="offcanvasRight"
		 aria-labelledby="offcanvasRightLabel">

		<div class="offcanvas-header helpCustomMargin">
			<div class="col col-11 text-center">
				<h5 class="offcanvas-title fw-bold justify-content-center" id="offcanvasRightLabel"
					style="color:white;">
					Ajuda
				</h5>
			</div>
			<div class="col" text-right>
				<button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas"
						aria-label="Close"></button>
			</div>
		</div>

		<input class="form-control mr-sm-2 mb-3 p-3 text-center" type="search" placeholder="Procure artigos que o ajude"
			   aria-label="Search" style="border-radius: 10px;">

		<div class="helpCustomMargin h-100" style="background-color: #F8F8F8; margin-bottom: -1.25em; ">
			<div class="offcanvas-body box overflow-auto">

				<div class=" row p-3 " style=" background-color: #F8F8F8">
					<button type="button" class=" helpShadowButton custom-button helpButton border-0 mt-3 fw-bold"
							id="showText">
						<span>Como alterar um educando</span>
						<img src="~/images/guide/dropdown.png" style="padding-left: 2%;">
					</button>

					<br><br><br><br>
					<span class="myText p-3 helpShadowButton" id="displayText"
						  style="display: none; position: relative;">
						Here's some more textHere's some more textHere's some more textHere's some
						more textHe
						re's some more textHere's some more text...
					</span>
				</div>

				<div class="row p-3">
					<button type="button" class="helpButton helpShadowButton border-0 mt-3 fw-bold" id="Artigos">
						<div class="d-flex align-items-center justify-content-center">
							<img src="~/images/guide/terms.png" class="me-4">
							<span>Leia artigos de ajuda</span>
						</div>
					</button>
					<br><br><br><br>
				</div>

				<div class="row p-3">
					<button type="button" class="helpButton helpShadowButton border-0 mt-3 fw-bold" id="Artigos">
						<div class="d-flex align-items-center justify-content-center">
							<img src="~/images/guide/comunity.png" class="me-4">
							<span>Pergunte à comunidade</span>
						</div>
					</button>
					<br><br><br><br>
				</div>

				<div class="row p-3">
					<button type="button" class="helpButton helpShadowButton border-0 mt-3 fw-bold" id="Artigos">
						<div class="d-flex align-items-center justify-content-center">
							<img src="~/images/guide/new.png" class="me-4">
							<span>Novas Atualizações</span>
						</div>
					</button>
					<br><br><br><br>
				</div>

				<div class="row p-3">
					<button type="button" class="helpButton helpShadowButton border-0 mt-3 fw-bold" id="Artigos">
						<div class="d-flex align-items-center justify-content-center">
							<img src="~/images/guide/feedback.png" class="me-4">
							<span>Dê Feedback</span>
						</div>
					</button>
					<br><br><br><br>
				</div>
			</div>
		</div>
	</div>


	<script type="text/javascript">
		// Add the following code if you want the name of the file appear on select
		$(".custom-file-input").on("change", function () {
			var fileName = $(this).val().split("\\").pop();
			$(this).siblings(".custom-file-label").addClass("selected").html(fileName);
		});
	</script>
	<!-- // Slide Left (Help) -->


	<script type="text/javascript">
		// Add the following code if you want the name of the file appear on select
		$(".custom-file-input").on("change", function () {
			var fileName = $(this).val().split("\\").pop();
			$(this).siblings(".custom-file-label").addClass("selected").html(fileName);
		});
	</script>

	@section Scripts {
	@{
			await Html.RenderPartialAsync("_ValidationScriptsPartial");
		}
	}
}