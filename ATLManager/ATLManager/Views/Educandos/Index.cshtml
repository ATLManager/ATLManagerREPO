@model IEnumerable<ATLManager.Models.Educando>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apelido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CC)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Atl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Encarregado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img src="~/images/@item.ProfilePicture" class="rounded-circle" height="40" width="40" asp-append-version="true" />
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apelido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Atl.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Encarregado.FullName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EducandoId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.EducandoId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.EducandoId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
