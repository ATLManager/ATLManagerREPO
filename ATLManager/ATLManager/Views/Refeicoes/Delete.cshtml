@model ATLManager.Models.Refeicao
@using ATLManager.Services;
@using Microsoft.AspNetCore.Identity
@using ATLManager.Areas.Identity.Data

@inject SignInManager<ATLManagerUser> SignInManager
@inject UserManager<ATLManagerUser> UserManager
@inject LanguageService language

@{
    ViewData["Title"] = @language.GetKey("delete_meal");
}
<link rel='stylesheet' type='text/css' media='screen' href='~/css/custom-box-12.css'>


@if (SignInManager.IsSignedIn(User))
{
    <!-- Container -->
    <div class="container-fluid">
        <div class="d-flex justify-content-center ms-2 pb-2" style="padding-left: 2%; padding-top: 0%;">
            <h1 class="me-3 fw-bold text-center mb-0">@language.GetKey("delete_meal")</h1>
            <img src="~/images/icons/delete-group.png" width="50" height="50">
        </div>
        <div class="row" style="padding-left: 6em;">
            <div class="col text-right pb-2" id="divQuestion">
                <button class="btn btn-primary rounded-circle" id="btn-ajuda">
                    <img src="~/images/question.png" alt="Imagem 1" class="img-fluid" width="15">
                </button>
            </div>
        </div>
        <!-- Fase 1  -->
        <!-- d-flex -->
        <div class="d-flex justify-content-center" id="divFase1">
            <!-- Box  -->
            <div class="row justify-content-center custom-box" id="myBox">
                <div class="row box border-5 p-5">
                    <div class="row mb-3 text-center">
                        <h3>@language.GetKey("ask_remove_meal")</h3>
                    </div>
                    <div class="container text-center">
                        <div class="row justify-content-center">
                            <img src="~/images/uploads/refeicoes/@Model.Picture"
                                 class="rounded-circle mb-3"
                                 style="width:15%"
                             asp-append-version="true" />
                        </div>
                        <dl class="row text-end">
                            <div class="row col-12 mb-3">
                                <div class="col"></div>
                                <div class="d-flex col-7 justify-content-center ms-2 pb-1">
                                    <img src="~/images/icons/info_ementa.png" width="30" height="30">
                                    <div style="margin-left: 1%;">
                                        <h4 class="fw-bold text-center">@language.GetKey("nutrition_info")</h4>
                                    </div>
                                </div>
                            </div>
                            <div class="row col-12 text-left">
                                <div class="row">
                                    <dt class="col-1"></dt>
                                    <dt class="col">
                                        @language.GetKey("gname")
                                    </dt>
                                    <dd class="col-3">
                                        @Html.DisplayFor(model => model.Name)
                                    </dd>
                                    <dt class="col">
                                        @language.GetKey("protein")
                                    </dt>
                                    <dd class="col-1">
                                        @Html.DisplayFor(model => model.Proteina)
                                    </dd>
                                    <dt class="col">
                                        @language.GetKey("vr")
                                    </dt>
                                    <dd class="col-1">
                                        @Html.DisplayFor(model => model.VR)
                                    </dd>
                                </div>
                                <div class="row">
                                    <dt class="col-1"></dt>
                                    <dt class="col">
                                        @language.GetKey("gdate")
                                    </dt>
                                    <dd class="col-3">
                                        @Html.DisplayFor(model => model.Data)
                                    </dd>
                                    <dt class="col">
                                        @language.GetKey("carbon_hydrates")
                                    </dt>
                                    <dd class="col-1">
                                        @Html.DisplayFor(model => model.HidratosCarbono)
                                    </dd>
                                    <dt class="col">
                                        @language.GetKey("sugar")
                                    </dt>
                                    <dd class="col-1">
                                        @Html.DisplayFor(model => model.Acucar)
                                    </dd>
                                </div>
                                <div class="row">
                                    <dt class="col-1"></dt>
                                    <dt class="col">
                                        @language.GetKey("category_label")
                                    </dt>
                                    <dd class="col-3">
                                        @Html.DisplayFor(model => model.Categoria)
                                    </dd>
                                    <dt class="col">
                                        @language.GetKey("lipids")
                                    </dt>
                                    <dd class="col-1">
                                        @Html.DisplayFor(model => model.Lipidos)
                                    </dd>
                                    <dt class="col">
                                        @language.GetKey("ag_sat")
                                    </dt>
                                    <dd class="col-1">
                                        @Html.DisplayFor(model => model.AGSat)
                                    </dd>
                                </div>
                                <div class="row">
                                    <dt class="col-1"></dt>
                                    <dt class="col">
                                        @language.GetKey("descricao")
                                    </dt>
                                    <dd class="col-3">
                                        @Html.DisplayFor(model => model.Descricao)
                                    </dd>
                                    <dt class="col">
                                        @language.GetKey("energetic_value")
                                    </dt>
                                    <dd class="col-1">
                                        @Html.DisplayFor(model => model.ValorEnergetico)
                                    </dd>
                                    <dt class="col">
                                        @language.GetKey("salt")
                                    </dt>
                                    <dd class="col-1">
                                        @Html.DisplayFor(model => model.Sal)
                                    </dd>
                                </div>
                            </div>
                        </dl>
                        <hr />
                        <div class="d-flex text-center mt-4">
                            <div class="col">
                                <a asp-action="Index">
                                    <button type="button"
                                            class="btn btn-secondary custom-button w-50" style="border-radius:6em">
                                        Voltar
                                    </button>
                                </a>
                            </div>
                            <div class="col">
                                <form asp-action="Delete">
                                    <input type="hidden" asp-for="@Model.RefeicaoId" />
                                    <input type="submit" value="Delete" class="btn btn-danger w-50" style="border-radius:6em" />
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

	<!-- Slide de Ajuda  -->
    <div id="menu-ajuda" class="bg-primary animate__animated animate__slideInLeft">
        <div class="row text-center mt-2">
            <div class="col-10 ">
                <h2 class="text-white ms-5">@language.GetKey("help")</h2>
            </div>
            <div class="col-2">
                <button type="button" class="btn-close text-reset" id="close-ajuda" aria-label="Close"></button>
            </div>
        </div>
        <div class="">
            <input class="form-control mr-sm-2 mb-3 p-2 text-center" type="search"
                   placeholder="@language.GetKey("txtSearchHelpArticles")" aria-label="Search" style="border-radius: 10px;">
        </div>
        <!-- -->
        <ul class="row justify-content-center p-4 bg-white mt-4 "
            style="position: absolute;   right: 0em; left: 0em; height: 80%;">
            <li class="row">
                <button type="button" class="btn btn-help helpShadowButton border-0 mt-3 fw-bold" id="showText1">
                    <div class="d-flex align-items-center justify-content-center">
                        <span>Como apagar uma Refeição</span>
                        <img src="~/images/guide/dropdown.png" style="padding-left: 2%;">
                    </div>
                </button>
                <span class="myText p-3 helpShadowButton" id="displayText1" style="display: none; position: relative;">
                    Para remover uma refeição basta clicar no botão vermelho de remover.
                </span>
            </li>
            <li class="row">
                <button type="button" class="btn helpShadowButton border-0 mt-3 fw-bold" id="Artigos">
                    <div class="d-flex align-items-center justify-content-center">
                        <div class="col-3">
                            <img src="~/images/guide/terms.png" class="">
                        </div>
                        <div class="col">
                            <span>@language.GetKey("readarticles")</span>
                        </div>
                    </div>
                </button>
            </li>
            <li class="row">
                <button type="button" class="btn helpShadowButton border-0 mt-3 fw-bold" id="Artigos">
                    <div class="d-flex align-items-center">
                        <div class="col-3">
                            <img src="~/images/guide/comunity.png" class="">
                        </div>
                        <div class="col">
                            <span>@language.GetKey("askcomunity")</span>
                        </div>
                    </div>
                </button>
            </li>
            <li class="row">
                <button type="button" class="btn helpShadowButton border-0 mt-3 fw-bold" id="Artigos">
                    <div class="d-flex align-items-center justify-content-center">
                        <div class="col-3">
                            <img src="~/images/guide/new.png" class="">
                        </div>
                        <div class="col">
                            <span>@language.GetKey("newsupdates")</span>
                        </div>
                    </div>
                </button>
            </li>
            <li class="row">
                <button type="button" class="btn helpShadowButton border-0 mt-3 fw-bold" id="Artigos">
                    <div class="d-flex align-items-center justify-content-center">
                        <div class="col-3">
                            <img src="~/images/guide/feedback.png" class="">
                        </div>
                        <div class="col">
                            <span>
                                <a asp-area="" asp-controller="Home" asp-action="Contacts" style="text-decoration:none;color:inherit;">
                                    @language.GetKey("givefeedback")
                                </a>
                            </span>
                        </div>
                    </div>
                </button>
            </li>
        </ul>
    </div>
    <!-- // Slide de Ajuda  -->
}