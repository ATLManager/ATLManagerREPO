@model ATLManager.Models.Refeicao
@using ATLManager.Services;
@using Microsoft.AspNetCore.Identity
@using ATLManager.Areas.Identity.Data

@inject SignInManager<ATLManagerUser> SignInManager
@inject UserManager<ATLManagerUser> UserManager
@inject LanguageService language

@{
    ViewData["Title"] = @language.GetKey("details_meal");
}
<link rel='stylesheet' type='text/css' media='screen' href='~/css/custom-box-12.css'>

@if (SignInManager.IsSignedIn(User))
{
    <div class="d-flex justify-content-center ms-2 pb-2" style="padding-left: 2%; padding-top: 0%;">
        <h1 class="me-3 fw-bold text-center mb-0">@language.GetKey("details_meal")</h1>
        <img src="~/images/icons/search-group.png" width="50" height="50">
    </div>
    <!-- Fase 1  -->
    <!-- d-flex -->
    <div class="d-flex justify-content-center mt-2">
        <!-- Box  -->
        <div class="row justify-content-center custom-box" id="myBox">
            <div class="row box border-5 p-5">
                <div class="container">
                    <div class="row mt-3 text-center">
                        <div class="mb-3">
                            <img src="~/images/uploads/refeicoes/@Model.Picture"
                                 class="rounded-circle mb-3"
                                 style="width:10%"
                             asp-append-version="true" />
                            <dl class="row text-end">
                                <div class="row col-12 mb-3">
                                    <div class="col"></div>
                                    <div class="d-flex col-7 justify-content-center ms-2 pb-1">
                                        <img src="~/images/icons/info_ementa.png" width="30" height="30">
                                        <div style="margin-left: 1%;">
                                            <h4 class="fw-bold text-center">@language.GetKey("nutrition_info")</h4>
                                        </div>
                                    </div>
                                </div>
                                <div class="row col-12 text-left">
                                    <div class="row">
                                        <dt class="col-1"></dt>
                                        <dt class="col">
                                            @language.GetKey("gname")
                                        </dt>
                                        <dd class="col-3">
                                            @Html.DisplayFor(model => model.Name)
                                        </dd>
                                        <dt class="col">
                                            @language.GetKey("protein")
                                        </dt>
                                        <dd class="col-1">
                                            @Html.DisplayFor(model => model.Proteina)
                                        </dd>
                                        <dt class="col">
                                            @language.GetKey("vr")
                                        </dt>
                                        <dd class="col-1">
                                            @Html.DisplayFor(model => model.VR)
                                        </dd>
                                    </div>
                                    <div class="row">
                                        <dt class="col-1"></dt>
                                        <dt class="col">
                                            @language.GetKey("gdate")
                                        </dt>
                                        <dd class="col-3">
                                            @Html.DisplayFor(model => model.Data)
                                        </dd>
                                        <dt class="col">
                                            @language.GetKey("carbon_hydrates")
                                        </dt>
                                        <dd class="col-1">
                                            @Html.DisplayFor(model => model.HidratosCarbono)
                                        </dd>
                                        <dt class="col">
                                            @language.GetKey("sugar")
                                        </dt>
                                        <dd class="col-1">
                                            @Html.DisplayFor(model => model.Acucar)
                                        </dd>
                                    </div>
                                    <div class="row">
                                        <dt class="col-1"></dt>
                                        <dt class="col">
                                            @language.GetKey("category_label")
                                        </dt>
                                        <dd class="col-3">
                                            @Html.DisplayFor(model => model.Categoria)
                                        </dd>
                                        <dt class="col">
                                            @language.GetKey("lipids")
                                        </dt>
                                        <dd class="col-1">
                                            @Html.DisplayFor(model => model.Lipidos)
                                        </dd>
                                        <dt class="col">
                                            @language.GetKey("ag_sat")
                                        </dt>
                                        <dd class="col-1">
                                            @Html.DisplayFor(model => model.AGSat)
                                        </dd>
                                    </div>
                                    <div class="row">
                                        <dt class="col-1"></dt>
                                        <dt class="col">
                                            @language.GetKey("descricao")
                                        </dt>
                                        <dd class="col-3">
                                            @Html.DisplayFor(model => model.Descricao)
                                        </dd>
                                        <dt class="col">
                                            @language.GetKey("energetic_value")
                                        </dt>
                                        <dd class="col-1">
                                            @Html.DisplayFor(model => model.ValorEnergetico)
                                        </dd>
                                        <dt class="col">
                                            @language.GetKey("salt")
                                        </dt>
                                        <dd class="col-1">
                                            @Html.DisplayFor(model => model.Sal)
                                        </dd>
                                    </div>
                                </div>
                            </dl>
                            <hr />
                            <div class="d-flex text-center mt-4">
                                <div class="col-8 text-right">
                                    <a asp-action="Index">
                                        <button type="button"
                                                class="btn btn-secondary custom-button w-50" style="border-radius:6em">
                                            @language.GetKey("btnVoltar")
                                        </button>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- // Box -->
        </div>
        <!-- // Fase 1 -->
    </div>

    <link rel='stylesheet' type='text/css' media='screen' href='~/css/custom-box-12.css'>
}