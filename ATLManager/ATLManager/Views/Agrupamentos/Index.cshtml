@model IEnumerable<ATLManager.Models.Agrupamento>
@using Microsoft.AspNetCore.Identity
@using ATLManager.Areas.Identity.Data

@inject SignInManager<ATLManagerUser> SignInManager
@inject UserManager<ATLManagerUser> UserManager

@{
    ViewData["Title"] = "Index";
}

@if (SignInManager.IsSignedIn(User))
{
    <!-- Container -->
    <div class="container-fluid">
        <div class="d-flex justify-content-center ms-2 pb-2" style="padding-left: 2%; padding-top: 2%;">
            <h1 class="me-3 fw-bold text-center mb-4">Consultar Agrupamento</h1>
            <img src="~/images/icons/search-group.png" width="50" height="50">
        </div>

        <div class="row pt-5" style="padding-left: 6em;">
            <div class="col-3"></div>
            <div class="col-5"></div>
            <div class="col-4  pb-2">
                <button class="btn btn-primary rounded-circle" id="question-button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasRight" aria-controls="offcanvasRight">
                    <img src="~/images/question.png" alt="Imagem 1" class="img-fluid" width="15">
                </button>
            </div>
        </div>

        <!-- Fase 1  -->
        <!-- d-flex -->
        <div class="d-flex justify-content-center" id="divFase1">
            <!-- Box  -->
            <div class="row col-6 justify-content-center custom-box w-50">
                <div class="row box border-5 p-5">

                    <div class="container">
                        <form>
                            <div class="row">

                                <div class="mb-5">
                                    <label for="nome" class="form-label">Procure Agrupamento:</label>
                                    <input type="text" class="form-control" id="nome"
                                        placeholder="Digite o nome do agrupamento">
                                </div>
                            </div>

                            <div class="row mt-3">
                                <div class="mb-3">

                                    <div class="row">
                                        <div class="col">
                                            <label for="lista-atls" class="form-label">Lista de Agrupamento(s):</label>
                                        </div>

                                        <div class="col">
                                            <p class="text-end">
                                                <a asp-action="Create"><button type="button" class="btn btn-primary custom-button rounded-circle"> + </button></a>
                                            </p>
                                        </div>
                                    </div>
                                  
                                    <p class="rounded-circle"></p>
                         

                                    <table class="table table-hover border text-center" style="cursor: pointer;" id="myTable">
                                        <thead>
                                            <tr>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.Name)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.Location)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.NIPC)
                                                </th>
                                                <th class="text-center"> Acções </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Name)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Location)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.NIPC)
                                                    </td>
                                                    <td class="text-center">
                                                        <a asp-action="Details" asp-route-id="@item.AgrupamentoID"> <button type="button" class="btn btn-primary custom-button"> Details</button></a> 
                                                        <a asp-action="Edit" asp-route-id="@item.AgrupamentoID"> <button type="button" class="btn btn-success custom-button w-25"> Edit </button></a> 
                                                        <a asp-action="Delete" asp-route-id="@item.AgrupamentoID"> <button type="button" class="btn btn-danger custom-button w-25"> Delete</button></a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>



                                </div>
                            </div>

                           @* <div class="d-flex text-center mt-5">
                                <div class="col">
                                    <a href="#"><button type="button"
                                            class="btn btn-secondary custom-button w-50">Voltar</button></a>
                                </div>

                                <div class="col">
                                    <button type="submit" id="fase1Submit" class="btn btn-primary custom-button w-75"
                                        data-bs-toggle="modal" data-bs-target="#modelShowDetails">Confirmar</button>
                                </div>
                            </div>*@
                        </form>
                    </div>
                </div>
            </div>
            <!-- // Box -->
        </div>
        <!-- // Fase 1 -->
        </div>

    <!-- Slide Left (Help) -->
    <div class="offcanvas offcanvas-end h-100" data-bs-backdrop="false" style="margin-top: 10%; border-radius: 15px" tabindex="-1" id="offcanvasRight" aria-labelledby="offcanvasRightLabel h">
        <div class="offcanvas-header">
            <h5 id="offcanvasRightLabel">Ajuda</h5>
            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <!-- canvas body  -->
            <!-- // canvas body  -->
        </div>
    </div>
    <!-- // Slide Left (Help) -->

    <!-- Search on table (Fase1) -->
    <script>
        // Get the input element and add an event listener for input
        const input = document.getElementById("nome");
        input.addEventListener("input", function () {

            // Get the table and search for the input value
            const table = document.getElementById("myTable");
            const filter = input.value.toUpperCase();
            const rows = table.getElementsByTagName("tr");

            // Loop through all table rows, and hide those that don't match the search query
            for (let i = 0; i < rows.length; i++) {
                const cells = rows[i].getElementsByTagName("td");
                let match = false;
                for (let j = 0; j < cells.length; j++) {
                    const cell = cells[j];
                    if (cell) {
                        const text = cell.textContent || cell.innerText;
                        if (text.toUpperCase().indexOf(filter) > -1) {
                            match = true;
                            break;
                        }
                    }
                }
                rows[i].style.display = match ? "" : "none";
            }
        });
    </script>

}