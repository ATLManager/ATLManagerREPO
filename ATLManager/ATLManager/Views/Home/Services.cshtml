@using ATLManager.Services;


@inject LanguageService language

@{
    ViewData["Title"] = language.GetKey("titleServices");
}

<div>
    <h1 class="display-4">@language.GetKey("txtWelcomeToPageServices")</h1>
    <p>@language.GetKey("txt1Services")</p>
    <p>@language.GetKey("txt2Services")</p>
    <p>@language.GetKey("txt3Services")</p>
    <p>@language.GetKey("txt4Services")</p>
    <p>@language.GetKey("txt5Services")</p>
    <p>@language.GetKey("txt6Services")</p>
    <p>@language.GetKey("txt7Services")</p>
</div>


<!-- SCRIPT PARA CLICAR NO MENU E MUDAR LI SELECIONADO (ACTIVE)  -->
<script>
    $(document).ready(function () {
        var activeId = "services"; // desired li element
        $('#' + activeId).addClass('active'); // add the active class to the desired li element
        $('.nav-link').click(function () {
            $('.nav-link').removeClass('active');
            $(this).addClass('active');
        });
    });
</script>
