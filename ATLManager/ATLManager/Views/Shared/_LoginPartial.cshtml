@using Microsoft.AspNetCore.Identity
@using ATLManager.Areas.Identity.Data

@inject SignInManager<ATLManagerUser> SignInManager
@inject UserManager<ATLManagerUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item" style="float:right">
        <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserAsync(User).Result.FirstName!</a>
    </li>
    
    <li class="nav-item" style="float:right">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="custom-submit">Logout</button>
        </form>
    </li>
}
else
{
        <!-- Menu Before Login -->
        <nav class="navbar navbar-expand-lg navbar-light bg-light">

            <a class="navbar-brand" href="#">
                <img src="~/images/logo/logo.png" alt="Logo da aplicação" width="65" height="55">
            </a>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link" id="home">Página Inicial</a>
                    </li> 
                    <li class="nav-item">
                        <a asp-area="" asp-controller="Home" asp-action="AboutUs" class="nav-link" id="about-us">Sobre Nós</a>
                    </li>
                    <li class="nav-item">
                    <a asp-area="" asp-controller="Home" asp-action="Services" class="nav-link" id="services">Serviços</a>
                    </li>
                    <li class="nav-item">
                    <a asp-area="" asp-controller="Home" asp-action="Contacts" class="nav-link" id="contact-us">Contacta-nos</a>
                    </li>
                </ul>

                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <div class="d-grid gap-2 mx-auto">
                    <li class="nav-item">
                        <a asp-area="Identity" asp-page="/Account/Login" class="nav-link btn btn-primary border-0 shadow fw-bold px-4 pl-3 pr-3 custom-button">Login</a>
                    </li>
            </div>
            <div class="d-grid gap-2">
        <li class="nav-item">
            <a id="register" asp-area="Identity" asp-page="/Account/Register" class="nav-link btn btn-secondary border-0 shadow fw-bold px-4 pl-3 pr-3 custom-button"
               style="background: #EFEFEF;">Registar</a>
        </li>
        </div>
    </ul>
            </div>
        </nav>
    <!-- / Menu Before Login-->
    
}

