@using Microsoft.AspNetCore.Identity
@using ATLManager.Areas.Identity.Data
@using ATLManager.Services

@inject SignInManager<ATLManagerUser> SignInManager
@inject UserManager<ATLManagerUser> UserManager
@inject LanguageService language

    <link href="~/css/flag-tab.css" rel="stylesheet" />

    <link href="~/css/ajuda.css" rel="stylesheet">
 

@if (SignInManager.IsSignedIn(User))
{
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="~/css/menu.min.css" rel="stylesheet">
}   


<body id="page-top">
    @if (!SignInManager.IsSignedIn(User)){
        <!-- Menu Before Login -->
        <nav class="navbar navbar-expand-lg navbar-light bg-light">

            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="~/images/logo/logo.png" alt="Logo da aplicação" width="65" height="55">
            </a>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link" id="home">@language.GetKey("home")</a>
                    </li> 
                    <li class="nav-item">
                        <a asp-area="" asp-controller="Home" asp-action="AboutUs" class="nav-link" id="about-us">@language.GetKey("titleAboutUs")</a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="" asp-controller="Home" asp-action="Services" class="nav-link" id="services">@language.GetKey("titleServices")</a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="" asp-controller="Home" asp-action="Contacts" class="nav-link" id="contact-us">@language.GetKey("titleContactUs")</a>
                    </li>

                    <li class="nav-item">
                        <div class="language-dropdown">
                            <a class="nav-link" id="language"> @language.GetKey("language")</a>
                            <div class="language-content" style="float:right">

                                <a asp-controller="Home" asp-action="ChangeLanguage" asp-route-culture="en-US" id="language">
                                    <img src="~/images/flags/en.png" class="flag-logo" />
                                    <span class="language-label">@language.GetKey("txtMenuEnglish")</span>
                                </a>

                                <a asp-controller="Home" asp-action="ChangeLanguage" asp-route-culture="pt-PT" id="language">
                                    <img src="~/images/flags/pt.png" class="flag-logo" />
                                    <span class="language-label">@language.GetKey("txtMenuPortugues")</span>
                                </a>
                            </div>
                        </div>
                    </li>

                </ul>

                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <div class="d-grid gap-2 mx-auto">
                    <li class="nav-item">
                        <a asp-area="Identity" asp-page="/Account/Login" class="nav-link btn btn-primary border-0 shadow colo-white px-4 pl-3 pr-3 color-white custom-button">@language.GetKey("login")</a>
                    </li>
            </div>
            <div class="d-grid gap-2">
        <li class="nav-item">
            <a id="register" asp-area="Identity" asp-page="/Account/RegisterType" class="nav-link btn btn-secondary border-0 shadow fw-bold px-4 pl-3 pr-3 custom-button"
               style="background: #EFEFEF;">@language.GetKey("register")</a>
        </li>
        </div>
    </ul>
  </div>
</nav>
    <!-- / Menu Before Login-->
        @*<script src="~/js/monitor_adapt.js"></script>*@
}

</body>

<script src="~/js/ajuda.js"></script>