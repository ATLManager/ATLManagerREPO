@model ATLManager.Models.Formulario
@using Microsoft.AspNetCore.Identity
@using ATLManager.Areas.Identity.Data

@inject SignInManager<ATLManagerUser> SignInManager
@inject UserManager<ATLManagerUser> UserManager

@{
    ViewData["Title"] = "Create";
}
@if (SignInManager.IsSignedIn(User))
{
    <!-- Fase 1  -->
    <!-- d-flex -->
    <!-- Container -->
    <div class="container-fluid">
        <div class="d-flex justify-content-center ms-2 pb-2" style="padding-left: 2%; padding-top: 2%;">
            <h1 class="me-3 fw-bold text-center mb-4">Criar Formulário</h1>
            <img src="~/images/icons/add-group.png" width="50" height="50">
        </div>

        <div class="row" style="padding-left: 6em;">
            <div class="col-3"></div>
            <div class="col-5"></div>
            <div class="col-4" pb-2" id="divQuestion">
                <button class="btn btn-primary rounded-circle" id="question-button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasRight" aria-controls="offcanvasRight">
                    <img src="~/images/question.png" alt="Imagem 1" class="img-fluid" width="15">
                </button>
            </div>
        </div>
        <div class="d-flex justify-content-center" id="divFase1">
            <!-- Box  -->
            <div class="row col-6 justify-content-center custom-box" id="myBox">
                <div class="row box border-5 p-5">
                    <!--text-center  -->

                    <div class="container">
                        <div class="row mt-3">
                            <div class="mb-3">
                                <div class="row">
                                    <div class="col-md">
                                        <form asp-action="Create">
                                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                            <div class="row mb-2">
                                                <div class="col-6">
                                                    <label asp-for="Name" class="form-label"></label>
                                                    <input asp-for="Name" class="form-control" placeholder="Insira o nome" />
                                                    <span asp-validation-for="Name" class="text-danger"></span>
                                                </div>


                                                <div class="col-6">
                                                    <div class="form-group">
                                                        <label asp-for="VisitaEstudoId" class="control-label"></label>
                                                        <select asp-for="VisitaEstudoId" class="form-control" asp-items="ViewBag.VisitaEstudoId">
                                                            <option value="">Escolha uma Visita de Estudo</option>
                                                        </select>
                                                    </div>
                                                </div>

                                            </div>

                                            <div class="row mb-2">
                                                <div class="col-6">
                                                    <label asp-for="StartDate" class="control-label"></label>
                                                    <input asp-for="StartDate" class="form-control" />
                                                    <span asp-validation-for="StartDate" class="text-danger"></span>
                                                </div>

                                                <div class="col-6 position-relative">
                                                    <div class="row">
                                                        <div class="h-100 position-absolute top-0 end-0">
                                                            <!-- extended box content -->
                                                            <div class="row mb-2">
                                                                <div class="col">
                                                                    <label asp-for="Description" class="control-label">Descrição</label>
                                                                    <textarea asp-for="Description" class="form-control" style="height:8em;resize:none"></textarea>
                                                                    <span asp-validation-for="Description" class="text-danger"></span>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row mb-2">
                                                <div class="col-6">
                                                    <label asp-for="DateLimit" class="control-label"></label>
                                                    <input asp-for="DateLimit" class="form-control" />
                                                    <span asp-validation-for="DateLimit" class="text-danger"></span>
                                                </div>
                                            </div>



                                            <div class="row justify-content-center mt-4">
                                                <div class="col-md-auto mt-4">
                                                    <div class="row">
                                                        <div class="col-md-6 mb-3">
                                                            <a asp-action="Index">
                                                                <button type="button"
                                                                        class="btn btn-secondary custom-button">
                                                                    Voltar
                                                                </button>
                                                            </a>
                                                        </div>

                                                        <div class="col-md-6 mb-3">
                                                            <button type="submit"
                                                                    class="btn btn-primary custom-button">
                                                                Criar
                                                            </button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- // Box -->
        </div>
    </div>

    <!-- Slide Left (Help) -->
    <div class="offcanvas offcanvas-end position-fixed box myButton bg-primary h-auto" style="top:auto" data-bs-scroll="true" data-bs-backdrop="false" tabindex="-1" id="offcanvasRight"
         aria-labelledby="offcanvasRightLabel">

        <div class="offcanvas-header helpCustomMargin">
            <div class="col col-11 text-center">
                <h5 class="offcanvas-title fw-bold justify-content-center" id="offcanvasRightLabel"
                    style="color:white;">
                    Ajuda
                </h5>
            </div>
            <div class="col" text-right>
                <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas"
                        aria-label="Close"></button>
            </div>
        </div>

        <input class="form-control mr-sm-2 mb-3 p-3 text-center" type="search" placeholder="Procure artigos que o ajude"
               aria-label="Search" style="border-radius: 10px;">

        <div class="helpCustomMargin h-100" style="background-color: #F8F8F8; margin-bottom: -1.25em; ">
            <div class="offcanvas-body box overflow-auto">

                <div class=" row p-3 " style=" background-color: #F8F8F8">
                    <button type="button" class=" helpShadowButton custom-button helpButton border-0 mt-3 fw-bold"
                            id="showText">
                        <span>Como criar um formulário</span>
                        <img src="~/images/guide/dropdown.png" style="padding-left: 2%;">
                    </button>

                    <br><br><br><br>
                    <span class="myText p-3 helpShadowButton" id="displayText"
                          style="display: none; position: relative;">
                        Here's some more textHere's some more textHere's some more textHere's some
                        more textHe
                        re's some more textHere's some more text...
                    </span>
                </div>

                <div class="row p-3">
                    <button type="button" class="helpButton helpShadowButton border-0 mt-3 fw-bold" id="Artigos">
                        <div class="d-flex align-items-center justify-content-center">
                            <img src="~/images/guide/terms.png" class="me-4">
                            <span>Leia artigos de ajuda</span>
                        </div>
                    </button>
                    <br><br><br><br>
                </div>

                <div class="row p-3">
                    <button type="button" class="helpButton helpShadowButton border-0 mt-3 fw-bold" id="Artigos">
                        <div class="d-flex align-items-center justify-content-center">
                            <img src="~/images/guide/comunity.png" class="me-4">
                            <span>Pergunte à comunidade</span>
                        </div>
                    </button>
                    <br><br><br><br>
                </div>

                <div class="row p-3">
                    <button type="button" class="helpButton helpShadowButton border-0 mt-3 fw-bold" id="Artigos">
                        <div class="d-flex align-items-center justify-content-center">
                            <img src="~/images/guide/new.png" class="me-4">
                            <span>Novas Atualizações</span>
                        </div>
                    </button>
                    <br><br><br><br>
                </div>

                <div class="row p-3">
                    <button type="button" class="helpButton helpShadowButton border-0 mt-3 fw-bold" id="Artigos">
                        <div class="d-flex align-items-center justify-content-center">
                            <img src="~/images/guide/feedback.png" class="me-4">
                            <span>Dê Feedback</span>
                        </div>
                    </button>
                    <br><br><br><br>
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript">
        // Add the following code if you want the name of the file appear on select
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>

    <!-- // Slide Left (Help) -->
    <!-- JS Button help 1 -->
    <script>
        document.getElementById('showText').addEventListener('click', function () {
            var displayText = document.getElementById('displayText');
            var showTextBtn = document.getElementById('showText');

            if (displayText.style.display === 'none') {
                displayText.style.display = 'block';
                showTextBtn.classList.remove('custom-button');
                showTextBtn.classList.add('myButton');

                // myButton
            } else {
                displayText.style.display = 'none';
                showTextBtn.classList.remove('myButton');
                showTextBtn.classList.add('custom-button');
            }
        });
    </script>
    <!-- JS Button help 1 -->
    <!--  Options Script -->
    <script>
        const toggleSwitch = document.getElementById('toggleSwitch');
        const divAgrupamento = document.getElementById('divAgrupamento');
        const divCertidao = document.getElementById('divCertidao');


        toggleSwitch.addEventListener('change', function () {
            if (toggleSwitch.checked) {
                divAgrupamento.style.display = 'block';
                divCertidao.style.display = 'none';
            } else {
                divAgrupamento.style.display = 'none';
                divCertidao.style.display = 'block';
            }
        });
    </script>
    <!--  // Options Script -->
    @section Scripts {
    @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }

    <script>
        window.onload = function () {
            var divBox = document.getElementById("myBox")
            var divQuestion = document.getElementById("divQuestion")

            if (screen.width >= 1366 && screen.height >= 768 && screen.width < 1920 && screen.height <= 1080) {
                // Large screen
                divBox.classList.remove("col-6");
                divBox.classList.add("col-12");

                divQuestion.classList.add("text-right");
                divQuestion.style.paddingRight("2em");
            }
        }
    </script>
}