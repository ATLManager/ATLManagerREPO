@model ATLManager.ViewModels.FuncionarioCreateViewModel
@using ATLManager.Services;
@using Microsoft.AspNetCore.Identity
@using ATLManager.Areas.Identity.Data

@inject SignInManager<ATLManagerUser> SignInManager
@inject UserManager<ATLManagerUser> UserManager
@inject LanguageService language
@{
    ViewData["Title"] = "Create";
}
<link rel='stylesheet' type='text/css' media='screen' href='~/css/custom-box-12.css'>

@if (SignInManager.IsSignedIn(User))
{   
    <!-- Fase 1  -->
    <!-- d-flex -->
    <!-- Container -->
    <div class="container-fluid">
        <div class="row" style="padding-left: 6em;">  
            <div class="col">
                <div class="d-flex justify-content-center ms-2" style="padding-left: 2%; padding-top: 0%;">
                    <h1 class="me-3 fw-bold text-center mb-0">@language.GetKey("tituloCriarFuncionario")</h1>
                    <img src="~/images/icons/add-group.png" width="50" height="50">
                </div>
            </div>
            <div class="col-1  pb-2" id="divQuestion">
                <button class="btn btn-primary rounded-circle" id="btn-ajuda">
                    <img src="~/images/question.png" alt="Imagem 1" class="img-fluid" width="15">
                </button>
            </div>
        </div>

        <div class="d-flex justify-content-center">
            <!-- Box  -->
            <div class="row justify-content-center custom-box " id="myBox">
                <div class="row box border-5 p-3">
                    <div class="container">
                        <div class="row mt-3">
                            <div class="mb-3">
                                <div class="row">
                                    <div class="col-md">
                                        <form enctype="multipart/form-data" asp-action="Create">
                                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                            <div class="row mb-2">
                                                <div class="col-6">
                                                    <div class="form-group">
                                                        <label asp-for="FirstName" class="form-label">@language.GetKey("txtFirstName")</label>
                                                        <input asp-for="FirstName" class="form-control" placeholder="@language.GetKey("placeholderFirstName")" aria-required="true">
                                                        <span asp-validation-for="FirstName" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                    <div class="col-6">
                                                    <label asp-for="LastName" class="form-label">@language.GetKey("txtSurnameName")</label>
                                                    <input asp-for="LastName" class="form-control" placeholder="@language.GetKey("placeholderSurnameName")" aria-required="true" />
                                                        <span asp-validation-for="LastName" class="text-danger"></span>
                                                    </div>
                                            </div>

                                            <div class="row mb-2">
                                                <div class="col-6">
                                                    <div class="form-group">
                                                        <label asp-for="CC" class="control-label">@language.GetKey("txtCC")</label>
                                                        <input asp-for="CC" class="form-control" placeholder="@language.GetKey("placeholderCC")" />
                                                        <span asp-validation-for="CC" class="text-danger"></span>
                                                    </div>
                                                </div>

                                             <div class="col-6">
                                                <div class="form-group mb-2">
                                                        <label asp-for="ProfilePicture" class="control-label">@language.GetKey("txtProfile")</label>
                                                    <div class="custom-file">
                                                        <input asp-for="ProfilePicture" class="custom-file-input" id="customFile">
                                                            <label class="custom-file-label" for="customFile">@language.GetKey("placeholderProfile")</label>
                                                    </div>
                                                    <span asp-validation-for="ProfilePicture" class="text-danger"></span>
                                                </div>
                                             </div>
                                           
                                           </div>

                                            <div class="row mb-2">
                                                <div class="col-6">
                                                    <div class="form-group">
                                                        <label asp-for="Email" class="form-label">@language.GetKey("txtEmail")</label>
                                                        <input asp-for="Email" class="form-control" placeholder="@language.GetKey("placeholderEmail")" aria-required="true" />
                                                        <span asp-validation-for="Email" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                <div class="col-6">
                                                    <label asp-for="DateOfBirth" class="control-label">@language.GetKey("txtDataNascimento")</label>
                                                    <input asp-for="DateOfBirth" class="form-control" />
                                                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <div class="row mb-2">
                                                <div class="col-6">
                                                    <div class="form-group">
                                                        <label asp-for="Password" class="form-label">@language.GetKey("txtPassword")</label>
                                                        <input asp-for="Password" class="form-control" placeholder="@language.GetKey("placeholderPassword")" aria-required="true" />
                                                        <span asp-validation-for="Password" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                <div class="col-6">
                                                    <label asp-for="ConfirmPassword" class="form-label">@language.GetKey("txtConfirmPassword")</label>
                                                    <input asp-for="ConfirmPassword" class="form-control" placeholder="@language.GetKey("placeholderConfirmPassword")" aria-required="true" />
                                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="d-flex text-center mt-4">
                                                <div class="col text-right">
                                                    <a asp-action="Index">
                                                        <button type="button"
                                                                class="btn btn-secondary custom-button w-50" style="border-radius:6em">
                                                            Voltar
                                                        </button>
                                                    </a>
                                                </div>
                                                <div class="col text-left">
                                                    <div class="form-group">
                                                        <input type="submit" value="Create" class="btn btn-primary w-50" style="border-radius:6em" />
                                                    </div>
                                                </div>
                                            </div>

                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                    <!-- // Box -->
                </div>
                <!-- // Fase 1 -->
            </div>
        </div>
    </div>

	    <!-- Slide de Ajuda  -->
    <div id="menu-ajuda" class="bg-primary animate__animated animate__slideInLeft">

        <div class="row text-center mt-2">
            <div class="col-10 ">
                <h2 class="text-white ms-5">Ajuda</h2>
            </div>

            <div class="col-2">
                <button type="button" class="btn-close text-reset" id="close-ajuda" aria-label="Close"></button>
            </div>
        </div>
        <div class="">
            <input class="form-control mr-sm-2 mb-3 p-2 text-center" type="search"
                placeholder="Procure artigos que o ajude" aria-label="Search" style="border-radius: 10px;">
        </div>
        <!-- -->
        <ul class="row justify-content-center p-4 bg-white mt-4 "
            style="position: absolute;   right: 0em; left: 0em; height: 80%;">
            <li class="row">
                <button type="button" class="btn btn-help helpShadowButton border-0 mt-3 fw-bold" id="showText1">
                    <div class="d-flex align-items-center justify-content-center">

                        <span>@language.GetKey("btnComoCriarFuncionario")</span>
                        <img src="~/images/guide/dropdown.png" style="padding-left: 2%;">
                    </div>
                </button>


                <span class="myText p-3 helpShadowButton" id="displayText1" style="display: none; position: relative;">
                    @language.GetKey("txtComoCriarFuncionario")

                </span>
            </li>


            <li class="row">
                <button type="button" class="btn helpShadowButton border-0 mt-3 fw-bold" id="Artigos">
                    <div class="d-flex align-items-center justify-content-center">
                        <div class="col-3">
                            <img src="~/images/guide/terms.png" class="">
                        </div>
                        <div class="col">
                            <span>Leia artigos de ajuda</span>
                        </div>
                    </div>
                </button>
            </li>
            <li class="row">
                <button type="button" class="btn helpShadowButton border-0 mt-3 fw-bold" id="Artigos">
                    <div class="d-flex align-items-center">
                        <div class="col-3">
                            <img src="~/images/guide/comunity.png" class="">
                        </div>
                        <div class="col">
                            <span>Pergunte à comunidade</span>
                        </div>
                    </div>
                </button>
            </li>
            <li class="row">
                <button type="button" class="btn helpShadowButton border-0 mt-3 fw-bold" id="Artigos">
                    <div class="d-flex align-items-center justify-content-center">
                        <div class="col-3">
                            <img src="~/images/guide/new.png" class="">
                        </div>
                        <div class="col">
                            <span>Novas Atualizações</span>
                        </div>
                    </div>
                </button>
            </li>
            <li class="row">
                <button type="button" class="btn helpShadowButton border-0 mt-3 fw-bold" id="Artigos">
                    <div class="d-flex align-items-center justify-content-center">
                        <div class="col-3">
                            <img src="~/images/guide/feedback.png" class="">
                        </div>
                        <div class="col">
                            <span>Dê Feedback</span>
                        </div>
                    </div>

                </button>
            </li>
        </ul>
    </div>
    <!-- // Slide de Ajuda  -->

    <script type="text/javascript">
        // Add the following code if you want the name of the file appear on select
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>


    @section Scripts {
    @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
}