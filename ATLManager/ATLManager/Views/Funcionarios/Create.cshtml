@model ATLManager.ViewModels.FuncionarioCreateViewModel
@using ATLManager.Services;
@using Microsoft.AspNetCore.Identity
@using ATLManager.Areas.Identity.Data

@inject SignInManager<ATLManagerUser> SignInManager
@inject UserManager<ATLManagerUser> UserManager
@inject LanguageService language
@{
    ViewData["Title"] = "Create";
}

@if (SignInManager.IsSignedIn(User))
{
    <!-- Fase 1  -->
    <!-- d-flex -->
    <!-- Container -->
    <div class="container-fluid">
        <div class="d-flex justify-content-center ms-2 pb-2" style="padding-left: 2%; padding-top: 2%;">
            <h1 class="me-3 fw-bold text-center mb-4">Criar Funcionário</h1>
            <img src="~/images/icons/add-group.png" width="50" height="50">
        </div>

        <div class="row" style="padding-left: 6em;">
            <div class="col-3"></div>
            <div class="col-5"></div>
            <div class="col-4  pb-2" id="divQuestion">
                <button class="btn btn-primary rounded-circle" id="question-button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasRight" aria-controls="offcanvasRight">
                    <img src="~/images/question.png" alt="Imagem 1" class="img-fluid" width="15">
                </button>
            </div>
        </div>
        <div class="d-flex justify-content-center">
            <!-- Box  -->
            <div class="row col-6 justify-content-center custom-box w-50" id="myBox">
                <div class="row box border-5 p-5">
                    <div class="container">
                        <div class="row mt-3">
                            <div class="mb-3">
                                <div class="row">
                                    <div class="col-md">
                                        <form enctype="multipart/form-data" asp-action="Create">
                                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                            <div class="row mb-3">
                                                <div class="col-6">
                                                    <div class="form-group">
                                                        <label asp-for="FirstName" class="form-label">@language.GetKey("nameAccount")</label>
                                                        <input asp-for="FirstName" class="form-control" placeholder="Insira o primeiro nome" aria-required="true">
                                                        <span asp-validation-for="FirstName" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                    <div class="col-6">
                                                        <label asp-for="LastName" class="form-label">@language.GetKey("lastNameAccount")</label>
                                                    <input asp-for="LastName" class="form-control" placeholder="Insira o ultimo nome" aria-required="true" />
                                                        <span asp-validation-for="LastName" class="text-danger"></span>
                                                    </div>
                                            </div>

                                            <div class="row mb-3">
                                                <div class="col-6">
                                                    <div class="form-group">
                                                        <label asp-for="CC" class="control-label"></label>
                                                        <input asp-for="CC" class="form-control" placeholder="Insira o cc" />
                                                        <span asp-validation-for="CC" class="text-danger"></span>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row mb-3">
                                                <div class="col-6">
                                                    <div class="form-group">
                                                        <label asp-for="Email" class="form-label">@language.GetKey("email")</label>
                                                        <input asp-for="Email" class="form-control" placeholder="Insira o email" aria-required="true" />
                                                        <span asp-validation-for="Email" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                <div class="col-6">
                                                    <label asp-for="DateOfBirth" class="control-label"></label>
                                                    <input asp-for="DateOfBirth" class="form-control" />
                                                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <div class="row mb-3">
                                                <div class="col-6">
                                                    <div class="form-group">
                                                        <label asp-for="Password" class="form-label">@language.GetKey("password")</label>
                                                        <input asp-for="Password" class="form-control" placeholder="Insira a password" aria-required="true" />
                                                        <span asp-validation-for="Password" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                <div class="col-6">
                                                    <label asp-for="ConfirmPassword" class="form-label">@language.GetKey("confirmPassword")</label>
                                                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirme a password" aria-required="true" />
                                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="form-group mb-3">
                                                <label asp-for="ProfilePicture" class="control-label"></label>
                                                <div class="custom-file">
                                                    <input asp-for="ProfilePicture" class="custom-file-input" id="customFile">
                                                    <label class="custom-file-label" for="customFile">Escolha um ficheiro</label>
                                                </div>
                                                <span asp-validation-for="ProfilePicture" class="text-danger"></span>
                                            </div>
                                            <hr />
                                            <div class="d-flex text-center mt-4">
                                                <div class="col text-right">
                                                    <a asp-action="Index">
                                                        <button type="button"
                                                                class="btn btn-secondary custom-button w-50" style="border-radius:6em">
                                                            Voltar
                                                        </button>
                                                    </a>
                                                </div>
                                                <div class="col text-left">
                                                    <div class="form-group">
                                                        <input type="submit" value="Create" class="btn btn-primary w-50" style="border-radius:6em" />
                                                    </div>
                                                </div>
                                            </div>

                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                    <!-- // Box -->
                </div>
                <!-- // Fase 1 -->
            </div>
        </div>
    </div>

    <!-- Slide Left (Help) -->
    <div class="offcanvas offcanvas-end position-fixed box myButton bg-primary h-auto" style="top:auto" data-bs-scroll="true" data-bs-backdrop="false" tabindex="-1" id="offcanvasRight"
         aria-labelledby="offcanvasRightLabel">

        <div class="offcanvas-header helpCustomMargin">
            <div class="col col-11 text-center">
                <h5 class="offcanvas-title fw-bold justify-content-center" id="offcanvasRightLabel"
                    style="color:white;">
                    Ajuda
                </h5>
            </div>
            <div class="col" text-right>
                <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas"
                        aria-label="Close"></button>
            </div>
        </div>

        <input class="form-control mr-sm-2 mb-3 p-3 text-center" type="search" placeholder="Procure artigos que o ajude"
               aria-label="Search" style="border-radius: 10px;">

        <div class="helpCustomMargin h-100" style="background-color: #F8F8F8; margin-bottom: -1.25em; ">
            <div class="offcanvas-body box overflow-auto">

                <div class=" row p-3 " style=" background-color: #F8F8F8">
                    <button type="button" class=" helpShadowButton custom-button helpButton border-0 mt-3 fw-bold"
                            id="showText">
                        <span>Como criar um funcionário</span>
                        <img src="~/images/guide/dropdown.png" style="padding-left: 2%;">
                    </button>

                    <br><br><br><br>
                    <span class="myText p-3 helpShadowButton" id="displayText"
                          style="display: none; position: relative;">
                        Here's some more textHere's some more textHere's some more textHere's some
                        more textHe
                        re's some more textHere's some more text...
                    </span>
                </div>

                <div class="row p-3">
                    <button type="button" class="helpButton helpShadowButton border-0 mt-3 fw-bold" id="Artigos">
                        <div class="d-flex align-items-center justify-content-center">
                            <img src="~/images/guide/terms.png" class="me-4">
                            <span>Leia artigos de ajuda</span>
                        </div>
                    </button>
                    <br><br><br><br>
                </div>

                <div class="row p-3">
                    <button type="button" class="helpButton helpShadowButton border-0 mt-3 fw-bold" id="Artigos">
                        <div class="d-flex align-items-center justify-content-center">
                            <img src="~/images/guide/comunity.png" class="me-4">
                            <span>Pergunte à comunidade</span>
                        </div>
                    </button>
                    <br><br><br><br>
                </div>

                <div class="row p-3">
                    <button type="button" class="helpButton helpShadowButton border-0 mt-3 fw-bold" id="Artigos">
                        <div class="d-flex align-items-center justify-content-center">
                            <img src="~/images/guide/new.png" class="me-4">
                            <span>Novas Atualizações</span>
                        </div>
                    </button>
                    <br><br><br><br>
                </div>

                <div class="row p-3">
                    <button type="button" class="helpButton helpShadowButton border-0 mt-3 fw-bold" id="Artigos">
                        <div class="d-flex align-items-center justify-content-center">
                            <img src="~/images/guide/feedback.png" class="me-4">
                            <span>Dê Feedback</span>
                        </div>
                    </button>
                    <br><br><br><br>
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript">
        // Add the following code if you want the name of the file appear on select
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>

    <!-- // Slide Left (Help) -->
    <!-- JS Button help 1 -->
    <script>
        document.getElementById('showText').addEventListener('click', function () {
            var displayText = document.getElementById('displayText');
            var showTextBtn = document.getElementById('showText');

            if (displayText.style.display === 'none') {
                displayText.style.display = 'block';
                showTextBtn.classList.remove('custom-button');
                showTextBtn.classList.add('myButton');

                // myButton
            } else {
                displayText.style.display = 'none';
                showTextBtn.classList.remove('myButton');
                showTextBtn.classList.add('custom-button');
            }
        });
    </script>
    <!-- JS Button help 1 -->
    @section Scripts {
    @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
    <script>
        window.onload = function () {
            var divBox = document.getElementById("myBox")

            if (screen.width >= 1366 && screen.height >= 768 && screen.width < 1920 && screen.height <= 1080) {
                // Large screen
                divBox.classList.remove("col-6");
                divBox.classList.add("col-8");
            }
        }
    </script>
}