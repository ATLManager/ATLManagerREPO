@model IEnumerable<ATLManager.Models.Notificacao>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mensagem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lida)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataNotificacao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderByDescending(m => m.DataNotificacao))
        { // Ordene o modelo por DataNotificacao decrescente
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Titulo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mensagem)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lida)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataNotificacao)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.NotificacaoId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.NotificacaoId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
