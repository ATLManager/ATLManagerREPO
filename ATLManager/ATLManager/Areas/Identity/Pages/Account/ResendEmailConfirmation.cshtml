@page
@using ATLManager.Models;
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = @language.GetKey("titleResendEmailConfirmation");
    Layout = "~/Areas/Identity/Pages/_AuthLayout.cshtml";
}
@inject LanguageService language

<body class="body">
    <!-- Image -->
    <div class="container-image-recover-password">
    <!-- <div class="image"></div> -->
        <img src="~/images/logo1.png" class="image" salt="ATLMANAGER">
    </div>
    <!-- / Image -->

<div class="container-box">
    <!-- <div class="image"></div> -->
    <div class="box-recover-password">
            
            <form method="post" class="form">
                @*<div asp-validation-summary="All" class="text-danger"></div>*@
                <h1>@ViewData["Title"]</h1>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <label asp-for="Input.Email" class="form-label"></label>
                <input asp-for="Input.Email" class="input-text" aria-required="true" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>


            <br>

            <div class="button-box-login">
                    <button type="submit" class="custom-submit">@language.GetKey("btnClickResendEmail")</button>
            </div>

            <div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
</body>