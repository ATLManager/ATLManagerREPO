@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Forgot password confirmation";
}


<body class="body">
    <!-- Image -->
    <div class="container-image-recover-password">
        <!-- <div class="image"></div> -->
        <img src="~/images/logo1.png" class="image" salt="ATLMANAGER">
    </div>
    <!-- / Image -->

    <div class="container-box">
        <!-- <div class="image"></div> -->
        <div class="box-recover-password">

            <form>
                <br />
               
                <h1>@ViewData["Title"]</h1>
                <p>
                    Please check your email to reset your password.
                </p>
            </form>
        </div>
    </div>
</body>