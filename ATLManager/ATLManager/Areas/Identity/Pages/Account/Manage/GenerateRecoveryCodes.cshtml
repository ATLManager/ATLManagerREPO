@page
@using ATLManager.Services;

@model GenerateRecoveryCodesModel
@{
    ViewData["Title"] = language.GetKey("titleGenerateRecoveryCodes");
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}
@inject LanguageService language



<div class="container-fluid">
   
    <div class="d-flex justify-content-center" id="divFase1">
        <!-- Box  -->
        <div class="row col-12 justify-content-center custom-box mt-5" id="myBox">
            <div class="row box border-5 p-5">
                <!--text-center  -->
                <div class="container">
                    <div class="row mt-3">
                        <div class="mb-3">

                           
                            <div class="row text-center">
                               <h3>@ViewData["Title"]</h3>

                                <div class="row">
                                    <partial name="_StatusMessage" for="StatusMessage" />
                                    <div class="alert alert-warning" role="alert">
                                        <p>
                                            <span class="glyphicon glyphicon-warning-sign"></span>
                                            <strong>@language.GetKey("txt1GenerateRecoveryCodes")</strong>
                                        </p>
                                        <p>
                                            @language.GetKey("txt2GenerateRecoveryCodes")
                                        </p>
                                        <p>
                                            @language.GetKey("txt3GenerateRecoveryCodes") <a asp-page="./ResetAuthenticator">@language.GetKey("txt4GenerateRecoveryCodes")</a>
                                        </p>
                                    </div>
                                    <div>
                                        <form method="post">
                                            <button class="btn btn-danger" type="submit">@language.GetKey("btnGenerateRecoveryCodes")</button>
                                        </form>
                                    </div>


                                </div>                     
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

