@page
@using ATLManager.Models;
@model ResetAuthenticatorModel
@{
    ViewData["Title"] = @language.GetKey("titleResetAuthKey");
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}
@inject LanguageService language

<partial name="_StatusMessage" for="StatusMessage" />
<h3>@ViewData["Title"]</h3>
<div class="alert alert-warning" role="alert">
    <p>
        <span class="glyphicon glyphicon-warning-sign"></span>
        <strong>@language.GetKey("txt1ResetAuthKey")</strong>
    </p>
    <p>
        @language.GetKey("txt2ResetAuthKey")
    </p>
</div>
<div>
    <form id="reset-authenticator-form" method="post">
        <button id="reset-authenticator-button" class="btn btn-danger" type="submit">@language.GetKey("btnResetAuthKey")</button>
    </form>
</div>
