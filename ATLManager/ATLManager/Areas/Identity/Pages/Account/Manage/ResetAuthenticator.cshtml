@page
@using ATLManager.Services;
@model ResetAuthenticatorModel
@{
    ViewData["Title"] = @language.GetKey("titleResetAuthKey");
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}
@inject LanguageService language

<div class="container-fluid">
   
    <div class="d-flex justify-content-center" id="divFase1">
        <!-- Box  -->
        <div class="row col-12 justify-content-center custom-box mt-5" id="myBox">
            <div class="row box border-5 p-5">
                <!--text-center  -->
                <div class="container">
                    <div class="row mt-3">
                        <div class="mb-3">

                           
                            <div class="row text-center">
                               <h3>@ViewData["Title"]</h3>

                                <div class="row">
                                
                                       <partial name="_StatusMessage" for="StatusMessage" />
                                        <div class="alert alert-warning" role="alert">
                                            <p class="mb-3">
                                                <span class="glyphicon glyphicon-warning-sign"></span>
                                                <strong>@language.GetKey("txt1ResetAuthKey")</strong>
                                            </p>
                                            <p>
                                                @language.GetKey("txt2ResetAuthKey")
                                            </p>
                                        </div>
                                        <div>
                                            <form id="reset-authenticator-form" method="post">
                                                <button id="reset-authenticator-button" class="btn btn-danger" type="submit">@language.GetKey("btnResetAuthKey")</button>
                                            </form>
                                        </div>
 
                                 
                                </div>                     
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

