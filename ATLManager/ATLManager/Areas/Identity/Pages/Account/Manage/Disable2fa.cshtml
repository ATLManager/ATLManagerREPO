@page
@using ATLManager.Services;

@model Disable2faModel
@{
    ViewData["Title"] = language.GetKey("titleDisable2factorAuth");
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}
@inject LanguageService language


<div class="container-fluid">

    <div class="d-flex justify-content-center" id="divFase1">
        <!-- Box  -->
        <div class="row col-12 justify-content-center custom-box mt-5" id="myBox">
            <div class="row box border-5 p-5">
                <!--text-center  -->
                <div class="container">
                    <div class="row mt-3">
                        <div class="mb-3">


                            <div class="row text-center">
                                <h3>@ViewData["Title"]</h3>

                                <div class="row">
                                    <partial name="_StatusMessage" for="StatusMessage" />

                                    <div class="alert alert-warning" role="alert">
                                        <p>
                                            <strong>@language.GetKey("txt1Disable2factorAuth")</strong>
                                        </p>
                                        <p>
                                            @language.GetKey("txt2Disable2factorAuth") <a asp-page="./ResetAuthenticator">@language.GetKey("txt3Disable2factorAuth")</a>
                                        </p>
                                    </div>

                                    <div>
                                        <form method="post">
                                            <button class="btn btn-danger" type="submit">@language.GetKey("btnDisable2factorAuth")</button>
                                        </form>
                                    </div>


                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
