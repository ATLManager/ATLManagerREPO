				<div class="container">
					<div class="row mt-3">
						<div class="mb-3">
							<partial name="_StatusMessage" for="StatusMessage" />
							<div class="row">
								<div class="col-md-3"></div>
								<div class="col-md-6">
									<form id="profile-form" method="post" enctype="multipart/form-data">
										<div asp-validation-summary="ModelOnly" class="text-danger"></div>
										<div class="row form-floating mb-3">
											<input asp-for="Username" class="form-control" disabled />
											<label asp-for="Username" class="form-label">@language.GetKey("email")</label>
										</div>
										<img src="~/images/uploads/users/@Model.Input.PictureName"
											 class="rounded-circle mb-3" style="width:15%"
											 asp-append-version="true" />
										<div class="row form-floating mb-3">
											<input asp-for="Input.Picture" class="form-control"/>
											<label asp-for="Input.Picture" class="control-label">Foto de Perfil</label>
											<span asp-validation-for="Input.Picture" class="text-danger"></span>
										</div>
										<div class="row form-floating mb-3">
											<input asp-for="Input.FirstName" class="form-control" />
											<label asp-for="Input.FirstName" class="form-label">Nome</label>
											<span asp-validation-for="Input.FirstName" class="text-danger"></span>
										</div>
										<div class="row form-floating mb-3">
											<input asp-for="Input.LastName" class="form-control" />
											<label asp-for="Input.LastName" class="form-label">Apelido</label>
											<span asp-validation-for="Input.LastName" class="text-danger"></span>
										</div>
										<div class="row form-floating mb-3">
											<input asp-for="Input.PhoneNumber" class="form-control" />
											<label asp-for="Input.PhoneNumber" class="form-label">@language.GetKey("txtPhoneNumber")</label>
											<span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
										</div>
										<div class="row justify-content-center">
											<button id="update-profile-button" type="submit" class="w-50 btn btn-lg btn-primary">@language.GetKey("btnSave")</button>
										</div>
									</form>
								</div>

								<div class="col-md-3"></div>
							</div>
						</div>
					</div>
				</div>
			</div>
