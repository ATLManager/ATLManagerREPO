@page
@using ATLManager.Models;
@model SetPasswordModel
@{
    ViewData["Title"] = @language.GetKey("titleSetPassword");
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}
@inject LanguageService language

<h3>@language.GetKey("txt1SetPassword")</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<p class="text-info">
    @language.GetKey("txt2SetPassword")
</p>
<div class="row">
    <div class="col-md-6">
        <form id="set-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" />
                <label asp-for="Input.NewPassword" class="form-label">@language.GetKey("password")</label>
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" />
                <label asp-for="Input.ConfirmPassword" class="form-label">@language.GetKey("confirmPassword")</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">@language.GetKey("btnSetPassword")</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
