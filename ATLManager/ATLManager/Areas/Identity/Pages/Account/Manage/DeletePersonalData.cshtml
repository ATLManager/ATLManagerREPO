@page
@using ATLManager.Services;

@model DeletePersonalDataModel
@{
    ViewData["Title"] = language.GetKey("titleDeletePersonalData");
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}
@inject LanguageService language



<div class="container-fluid">

    <div class="d-flex justify-content-center" id="divFase1">
        <!-- Box  -->
        <div class="row col-12 justify-content-center custom-box mt-5" id="myBox">
            <div class="row box border-5 p-5">
                <!--text-center  -->
                <div class="container">
                    <div class="row mt-3">
                        <div class="mb-3">


                            <div class="row text-center">
                                <h3>@ViewData["Title"]</h3>

                                <div class="row">

                                    <div class="alert alert-warning" role="alert">
                                        <p>
                                            <strong>@language.GetKey("txtDeletePersonalData")</strong>
                                        </p>
                                    </div>

                                    <div>
                                        <form id="delete-user" method="post">
                                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                            @if (Model.RequirePassword)
                                            {
                                                <div class="form-floating">
                                                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                                                    <label asp-for="Input.Password" class="form-label">@language.GetKey("password")</label>
                                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                                </div>
                                            }
                                            <button class="w-100 btn btn-lg btn-danger" type="submit">@language.GetKey("btnDeletePersonalData")</button>
                                        </form>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
