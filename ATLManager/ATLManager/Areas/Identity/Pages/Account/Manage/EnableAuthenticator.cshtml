@page
@using ATLManager.Services;

@model EnableAuthenticatorModel
@{
    ViewData["Title"] = @language.GetKey("titleConfigure2factorAuth");
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}
@inject LanguageService language


<div class="container-fluid">

    <div class="d-flex justify-content-center" id="divFase1">
        <!-- Box  -->
        <div class="row col-12 justify-content-center custom-box mt-2" id="myBox">
            <div class="row box border-5 p-5">
                <!--text-center  -->
                <div class="container">
                    <div class="row mt-3">
                        <div class="mb-0">
                            <div class="row text-center">

                                <partial name="_StatusMessage" for="StatusMessage" />
                                <h3>@ViewData["Title"]</h3>
                                <div>
                                    <p>@language.GetKey("txtConfigure2factorAuth")</p>
                                    <ol class="list">
                                        <li>
                                            <p>
                                                @language.GetKey("txt1Configure2factorAuth")
                                                <a href="https://go.microsoft.com/fwlink/?Linkid=825072">Android</a> @language.GetKey("and")
                                                <a href="https://go.microsoft.com/fwlink/?Linkid=825073">iOS</a> @language.GetKey("or")
                                                @language.GetKey("txt2Configure2factorAuth")
                                                <a href="https://play.google.com/store/apps/details?id=com.google.android.apps.authenticator2&amp;hl=en">Android</a> @language.GetKey("and")
                                                <a href="https://itunes.apple.com/us/app/google-authenticator/id388497605?mt=8">iOS</a>.
                                            </p>
                                        </li>
                                        <li>
                                            <p>@language.GetKey("txt3Configure2factorAuth") <kbd>@Model.SharedKey</kbd> @language.GetKey("txt4Configure2factorAuth")</p>
                                            <div class="alert alert-info">@language.GetKey("txt5Configure2factorAuth") <a href="https://go.microsoft.com/fwlink/?Linkid=852423">@language.GetKey("txt6Configure2factorAuth")</a>.</div>
                                            <div id="qrCode"></div>
                                            <div id="qrCodeData" data-url="@Model.AuthenticatorUri"></div>
                                        </li>
                                        <li>
                                            <p>
                                                @language.GetKey("txt7Configure2factorAuth")
                                            </p>
                                            <div class="row justify-content-center">
                                                <div class="col-md-6">
                                                    <form id="send-code" method="post">
                                                        <div class="form-floating mb-2">
                                                            <input asp-for="Input.Code" class="form-control" autocomplete="off" />
                                                            <label asp-for="Input.Code" class="control-label form-label">@language.GetKey("txtVerificationCode")</label>
                                                            <span asp-validation-for="Input.Code" class="text-danger"></span>
                                                        </div>
                                                        <button type="submit" class="w-100 btn btn-lg btn-primary">@language.GetKey("btnVerify")</button>
                                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                                    </form>
                                                </div>
                                            </div>
                                        </li>
                                    </ol>
                                </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
