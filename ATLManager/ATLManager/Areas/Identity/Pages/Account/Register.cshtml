    </nav>
    <!-- / Menu Lateral de Ajuda -->


    <div class="container-box">
        <!-- <div class="image"></div> -->
        <div class="box">
             
            <form class="form-registo" id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="row-p">
                    <div>
                        <label asp-for="Input.FirstName">@language.GetKey("nameAccount")</label>
                        <input class="input-text" class="input-text-row" asp-for="Input.FirstName" autocomplete="username" aria-required="true">
                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                    </div>
                    <div class="div-apelido">
                        <label asp-for="Input.LastName">@language.GetKey("lastNameAccount")</label>
                        <input asp-for="Input.LastName" class="input-text" autocomplete="username" aria-required="true" />
                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                    </div>
                </div>
     
                <div class="div-email-register">
                    <label asp-for="Input.Email">@language.GetKey("email")</label>
                    <input asp-for="Input.Email" class="input-text" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>

                </div>
               
                <div class="row-p1">
                
                    <div class="div-pw-esquerdo">
                        <label asp-for="Input.Password">@language.GetKey("password")</label>
                        <input asp-for="Input.Password" class="input-text" autocomplete="new-password" aria-required="true" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                
                    <div class="div-apelido">
                        <label asp-for="Input.ConfirmPassword">@language.GetKey("confirmPassword")</label>
                        <input asp-for="Input.ConfirmPassword" class="input-text" autocomplete="new-password" aria-required="true" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <div style="padding: 5px">
                    <a id="login" asp-area="Identity" asp-page="/Account/Login" style="float: right;" class="pClass">@language.GetKey("haveAccount")</a> <!-- acrescentar-->
                </div>
                <br>
                <div class="button-box">
                    <button id="registerSubmit" type="submit" class="custom-submit">@language.GetKey("register")</button>
                </div>
           
                <div class="login-option">
                    <p>@language.GetKey("doRegisterBy")</p>
                </div>

             </form>
                
                <div>
                    @{
                        if ((Model.ExternalLogins?.Count ?? 0) == 0)
                        {
                            <div>
                                <p>
                                    There are no external authentication services configured. See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715">
                                        article
                                        about setting up this ASP.NET application to support logging in via external services
                                    </a>.
                                </p>
                            </div>
                        }
                        else
                        {
                            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                                <div class="icons-special-div">

                                    @foreach (var provider in Model.ExternalLogins)
                                    {
                                        @if (provider.Name.Equals("Facebook"))
                                        {

                                        <button type="submit" class="custom_namev1" name="provider" value="@provider.Name" title="@language.GetKey("txtHoverRegisterFacebook")">
                                                <img src="~/images/facebook.png" style="width:40px;height:40px;" alt="Button Image" class="image-question">
                                            </button>
                                        }

                                        @if (provider.Name.Equals("Microsoft"))
                                        {
                                        <button type="submit" class="custom_namev1" name="provider" value="@provider.Name" title="@language.GetKey("txtHoverRegisterMicrosoft")">
                                                <img src="~/images/outlook.png" style="width:40px;height:40px;display:flex;" alt="Button Image" class="image-question">
                                            </button>
                                        }

                                        @if (provider.Name.Equals("Twitter"))
                                        {
                                        <button type="submit" class="custom_namev1" name="provider" value="@provider.Name" title="@language.GetKey("txtHoverRegisterTwitter")">
                                                <img src="~/images/twitter.png" style="width:40px;height:40px;display:flex;" alt="Button Image" class="image-question">
                                            </button>
                                        }

                                        @if (provider.Name.Equals("Google"))
                                        {
                                        <button type="submit" class="custom_namev1" name="provider" value="@provider.Name" title="@language.GetKey("txtHoverRegisterGoogle")">
                                                <img src="~/images/google.png" style="width:40px;height:40px;display:flex;" alt="Button Image" class="image-question">
                                            </button>
                                        }
                                    }
                                </div>
                            </form>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
           
   

        

