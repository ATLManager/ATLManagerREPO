        <partial name="_ValidationScriptsPartial" />
    }


        <script>
            let menuToggle = document.querySelector(".custom-button");
            let menu = document.querySelector(".menu");

            menuToggle.addEventListener("click", function () {
                menu.classList.toggle("open");
            });
