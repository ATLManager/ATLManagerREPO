    <!-- Menu Lateral de Ajuda -->
    <nav class="menu">
        <div class="first-container">
            <div class="container-top">
                <div class="custom-h1">
                    <h1> Ajuda </h1>
                </div>

                <div class="search-container">
                    <input type="text" id="search" placeholder="@language.GetKey("txtSearchHelpArticles")">
                </div>
            </div>

            <div class="container-help-info">

                <div>
                    <button class="custom-button-info" id="info-button1">@language.GetKey("howToRegisterOnApp")</button>

                    <div id="info1" class="help-info1">
