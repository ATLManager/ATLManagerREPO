                            @language.GetKey("txtHowToRegisterOnApp")
                         </p>
                    </div>
                </div>
                <br>
                <div>
                    <button class="custom-button-info" id="info-button2">@language.GetKey("howToRegisterViaFacebook")</button>

                    <div id="info2" class="help-info2">
                        <p class="p-information">
                            @language.GetKey("txtHowToRegisterViaFacebook")
                        </p>
                    </div>
                </div>
                <br>
                <div>
                    <button class="custom-button-info" id="info-button3">@language.GetKey("howToRegisterViaOutlook")</button>

